---
import Welcome from '../components/Welcome.astro';
import Hero from '../components/home/Hero.astro';
import Layout from '../layouts/Layout.astro';
import ServicesOverview from '../components/home/ServicesOverview.astro';
import WhyChooseUs from '../components/home/WhyChooseUs.astro';
import CaseStudies from '../components/home/CaseStudies.astro';
import Testimonials from '../components/home/Testimonials.astro';
import HowWeWork from '../components/home/HowWeWork.astro';
import FAQ from '../components/home/FAQ.astro';
import FinalCTA from '../components/home/FinalCTA.astro';

import { homeHeroConfig } from '../lib/home';


---

<Layout  title="Home - Your Agency"
  description="We create digital solutions that drive results">

 <Hero 

  {...homeHeroConfig}
/>
  <ServicesOverview/>
  <WhyChooseUs/>
   <CaseStudies 
    variant="featured"
    maxCases={4}
    showCta={true}
    ctaHref="/portfolio"
  />
 <Testimonials 
    variant="carousel"
    showRatings={true}
    showLogos={true}
    autoplay={true}
  />
  <HowWeWork variant="minimal"
    showTimeline={true}
    showCta={true}/>
     <FAQ 
    variant="accordion"
    showCta={true}
    maxFaqs={12}
  />
 <FinalCTA 
    variant="centered"
    showGuarantee={true}
    showTestimonial={true}
    showStats={true}
  />
</Layout>
