---
import Welcome from '../components/Welcome.astro';
import Hero from '../components/home/Hero.astro';
import Layout from '../layouts/Layout.astro';
import ServicesOverview from '../components/home/ServicesOverview.astro';
import WhyChooseUs from '../components/home/WhyChooseUs.astro';
import CaseStudies from '../components/home/CaseStudies.astro';
import Testimonials from '../components/home/Testimonials.astro';
import HowWeWork from '../components/home/HowWeWork.astro';
import FAQ from '../components/home/FAQ.astro';
import FinalCTA from '../components/home/FinalCTA.astro';
import ResultsThatSpeak from '../components/home/ResultsThatSpeak.astro'

import { homeHeroConfig } from '../lib/home';
import { servicesOverviewConfig } from '../lib/services';
import caseStudiesData from '../lib/home';


---

<Layout
  title="Our Services - Digital Agency"
  description="Comprehensive digital solutions for modern businesses"
  ariaDescribedBy="services-description"
  ariaLabelledBy="services-heading"
  sitemapUrl="/sitemap.xml"
  rssFeedUrl="/blog/rss.xml"
  criticalImages={['/hero-image.webp', '/services-banner.webp']}
  faqSchema={[
    {
      question: "What services do you offer?",
      answer: "We provide web development, SEO, and digital marketing services."
    },
    {
      question: "How long does a project take?",
      answer: "Most projects are completed within 4-8 weeks depending on scope."
    }
  ]}
  resourceHints={[
    { rel: 'preconnect', href: 'https://api.youragency.com' },
    { rel: 'dns-prefetch', href: '//analytics.google.com' }
  ]}
>

 <Hero 

  {...homeHeroConfig}
/>
  <ServicesOverview {...servicesOverviewConfig}/>
  <!-- <WhyChooseUs/> -->

 <!-- <Testimonials 
    variant="carousel"
    showRatings={true}
    showLogos={true}
    autoplay={true}
  /> -->
  <HowWeWork variant="minimal"
    showTimeline={true}
    showCta={true}/>
     <!-- <FAQ 
    variant="accordion"
    showCta={true}
    maxFaqs={12}
  /> -->
     <CaseStudies 
    variant="featured"
    maxCases={4}
    showCta={true}
    ctaHref="/portfolio"
    caseStudies={caseStudiesData.featured}
/>
  />
  <ResultsThatSpeak/>
 <FinalCTA 
    variant="centered"
    showGuarantee={true}
    showTestimonial={true}
    showStats={true}
  />
</Layout>
