---
// CertificationsAndAwards.astro - Third-party validation and recognition
import theme from '../../lib/theme';

export interface Props {
  // Content props
  eyebrow?: string;
  headline?: string;
  description?: string;
  
  // Certifications
  certifications?: Array<{
    id: string;
    name: string;
    issuer: string;
    description?: string;
    logo?: string;
    logoAlt?: string;
