    verificationUrl?: string;
    level?: 'basic' | 'intermediate' | 'advanced' | 'expert' | 'premier';
    category: 'technology' | 'business' | 'security' | 'design' | 'marketing' | 'project-management';
    featured?: boolean;
  }>;
  
  // Awards and Recognition
  awards?: Array<{
    id: string;
    title: string;
    organization: string;
    year: string;
    description?: string;
    category: 'industry' | 'client-satisfaction' | 'innovation' | 'growth' | 'leadership' | 'community';
    rank?: string;
    logo?: string;
    logoAlt?: string;
    featured?: boolean;
  }>;
  
  // Industry memberships
  memberships?: Array<{
    id: string;
    organization: string;
    role?: string;
    since: string;
    description?: string;
    logo?: string;
    logoAlt?: string;
    website?: string;
    featured?: boolean;
  }>;
  
  // Client testimonials/reviews from platforms
  reviews?: Array<{
    id: string;
    platform: string;
    rating: number;
    reviewCount: number;
    logo?: string;
    logoAlt?: string;
    url?: string;
    featured?: boolean;
  }>;
  
  // Layout variant
  variant?: 'default' | 'grid' | 'showcase' | 'minimal';
  
  // Settings
  showLogos?: boolean;
  showDates?: boolean;
  showVerification?: boolean;
}

