// Helper function to get category colors
function getCategoryColor(category: string): string {
  const colors = {
    technology: 'blue',
    business: 'green', 
    security: 'red',
    design: 'purple',
    marketing: 'orange',
    'project-management': 'teal',
    industry: 'blue',
    'client-satisfaction': 'green',
    innovation: 'purple',
    growth: 'orange',
    leadership: 'indigo',
    community: 'pink'
  };
  return colors[category] || 'gray';
}

// Helper function to get level badge style
function getLevelStyle(level: string): string {
  const styles = {
    basic: 'level-basic',
    intermediate: 'level-intermediate', 
    advanced: 'level-advanced',
    expert: 'level-expert',
    premier: 'level-premier'
  };
  return styles[level] || 'level-basic';
}
---

<section class="certifications-awards" aria-labelledby="certifications-headline">
  <div class="certifications-container">
    
    <!-- Section Header -->
    <div class="section-header" data-animate="fade-up">
      <span class="section-eyebrow">{eyebrow}</span>
      <h2 id="certifications-headline" class="section-headline">
        {headline}
      </h2>
      <p class="section-description">
        {description}
      </p>
    </div>

    <!-- Featured Awards Section -->
    {awards.filter(award => award.featured).length > 0 && (
      <div class="featured-awards-section" data-animate="fade-up" data-delay="200">
        <div class="featured-awards-header">
          <h3 class="subsection-title">Recent Awards & Recognition</h3>
          <p class="subsection-description">
            Latest industry recognition for our excellence and innovation.
          </p>
        </div>
        
        <div class="featured-awards-grid">
          {awards.filter(award => award.featured).map((award, index) => (
            <div 
              class={`award-card featured category-${award.category}`}
              data-animate="fade-up"
              data-delay={300 + (index * 100)}
              key={award.id}
            >
              <div class="award-content">
                <div class="award-header">
                  <div class="award-year">{award.year}</div>
                  {award.rank && (
                    <div class="award-rank">{award.rank}</div>
                  )}
                </div>
                
                <div class="award-details">
                  <h4 class="award-title">{award.title}</h4>
                  <p class="award-organization">{award.organization}</p>
                  {award.description && (
                    <p class="award-description">{award.description}</p>
                  )}
                </div>
                
                <div class="award-badge">
                  <svg class="badge-icon" width="24" height="24" viewBox="0 0 24 24" fill="none">
                    <path d="M12 2L15.09 8.26L22 9L17 14.74L18.18 22L12 18.27L5.82 22L7 14.74L2 9L8.91 8.26L12 2Z" fill="currentColor"/>
                  </svg>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    )}

    <!-- Certifications Section -->
    <div class="certifications-section" data-animate="fade-up" data-delay="400">
      <div class="certifications-header">
        <h3 class="subsection-title">Professional Certifications</h3>
        <p class="subsection-description">
          Industry-recognized certifications that validate our technical expertise and best practices.
        </p>
      </div>
      
      <div class={`certifications-grid variant-${variant}`}>
        {certifications.map((cert, index) => (
          <div 
            class={`certification-card ${cert.featured ? 'featured' : ''} category-${cert.category} ${getLevelStyle(cert.level)}`}
            data-animate="fade-up"
            data-delay={500 + (index * 100)}
            key={cert.id}
          >
            <div class="cert-content">
              <div class="cert-header">
                <div class="cert-issuer">
                  <span class="issuer-name">{cert.issuer}</span>
                  {cert.level && (
                    <span class={`level-badge ${getLevelStyle(cert.level)}`}>
                      {cert.level.charAt(0).toUpperCase() + cert.level.slice(1)}
                    </span>
                  )}
                </div>
                
                {showDates && cert.date && (
                  <div class="cert-dates">
                    <span class="cert-date">Earned: {cert.date}</span>
                    {cert.expiryDate && (
                      <span class="expiry-date">Expires: {cert.expiryDate}</span>
                    )}
                  </div>
                )}
              </div>
              
              <div class="cert-details">
                <h4 class="cert-name">{cert.name}</h4>
                {cert.description && (
                  <p class="cert-description">{cert.description}</p>
                )}
              </div>
              
              <div class="cert-footer">
                <div class={`category-tag category-${getCategoryColor(cert.category)}`}>
                  {cert.category.replace('-', ' ')}
                </div>
                
                {showVerification && cert.verificationUrl && (
                  <a href={cert.verificationUrl} class="verify-link" target="_blank" rel="noopener noreferrer">
                    <svg class="verify-icon" width="16" height="16" viewBox="0 0 16 16" fill="none">
                      <path d="M8 0L9.798 5.292L16 6.062L11.494 10.708L12.944 16L8 13.292L3.056 16L4.506 10.708L0 6.062L6.202 5.292L8 0Z" fill="currentColor"/>
                    </svg>
                    Verify
                  </a>
                )}
              </div>
            </div>
            
            {cert.featured && (
              <div class="featured-indicator">
                <span>Featured</span>
              </div>
            )}
          </div>
        ))}
      </div>
    </div>

    <!-- Reviews & Ratings Section -->
    {reviews && reviews.length > 0 && (
      <div class="reviews-section" data-animate="fade-up" data-delay="600">
        <div class="reviews-header">
          <h3 class="subsection-title">Client Reviews & Ratings</h3>
          <p class="subsection-description">
            Consistently high ratings across all major review platforms.
          </p>
        </div>
        
        <div class="reviews-grid">
          {reviews.map((review, index) => (
            <div 
              class={`review-card ${review.featured ? 'featured' : ''}`}
              data-animate="fade-up"
              data-delay={700 + (index * 100)}
              key={review.id}
            >
              <div class="review-content">
                <div class="review-header">
                  <h4 class="platform-name">{review.platform}</h4>
                  <div class="rating-display">
                    <div class="stars">
                      {Array.from({length: 5}, (_, i) => (
                        <svg 
                          key={i}
                          class={`star ${i < Math.floor(review.rating) ? 'filled' : ''} ${i < review.rating && i >= Math.floor(review.rating) ? 'half' : ''}`}
                          width="20" height="20" viewBox="0 0 20 20" fill="none"
                        >
                          <path d="M10 0L12.245 6.91L20 7.639L14.27 13.18L15.89 21L10 17.09L4.11 21L5.73 13.18L0 7.639L7.755 6.91L10 0Z" fill="currentColor"/>
                        </svg>
                      ))}
                    </div>
                    <span class="rating-number">{review.rating}</span>
                  </div>
                </div>
                
                <div class="review-stats">
                  <span class="review-count">{review.reviewCount} reviews</span>
                  {review.url && (
                    <a href={review.url} class="view-reviews" target="_blank" rel="noopener noreferrer">
                      View Reviews
                      <svg class="external-link" width="14" height="14" viewBox="0 0 14 14" fill="none">
                        <path d="M11 3L3 11M11 3H5M11 3V9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                      </svg>
                    </a>
                  )}
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    )}

    <!-- Industry Memberships -->
    {memberships && memberships.length > 0 && (
      <div class="memberships-section" data-animate="fade-up" data-delay="800">
        <div class="memberships-header">
          <h3 class="subsection-title">Industry Memberships & Partnerships</h3>
          <p class="subsection-description">
            Active participation in leading industry organizations and initiatives.
          </p>
        </div>
        
        <div class="memberships-grid">
          {memberships.map((membership, index) => (
            <div 
              class={`membership-card ${membership.featured ? 'featured' : ''}`}
              data-animate="fade-up"
              data-delay={900 + (index * 100)}
              key={membership.id}
            >
              <div class="membership-content">
                <div class="membership-header">
                  <h4 class="organization-name">{membership.organization}</h4>
                  {membership.role && (
                    <span class="member-role">{membership.role}</span>
                  )}
                </div>
                
                <div class="membership-details">
                  <div class="member-since">Member since {membership.since}</div>
                  {membership.description && (
                    <p class="membership-description">{membership.description}</p>
                  )}
                </div>
                
                {membership.website && (
                  <div class="membership-footer">
                    <a href={membership.website} class="organization-link" target="_blank" rel="noopener noreferrer">
                      Visit Organization
                      <svg class="external-link" width="14" height="14" viewBox="0 0 14 14" fill="none">
                        <path d="M11 3L3 11M11 3H5M11 3V9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                      </svg>
                    </a>
                  </div>
                )}
              </div>
              
              {membership.featured && (
                <div class="membership-featured-badge">
                  <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
                    <path d="M8 0L9.798 5.292L16 6.062L11.494 10.708L12.944 16L8 13.292L3.056 16L4.506 10.708L0 6.062L6.202 5.292L8 0Z" fill="currentColor"/>
                  </svg>
                </div>
              )}
            </div>
          ))}
        </div>
      </div>
    )}

    <!-- All Awards Section -->
    {awards.filter(award => !award.featured).length > 0 && (
      <div class="all-awards-section" data-animate="fade-up" data-delay="1000">
        <div class="all-awards-header">
          <h3 class="subsection-title">Additional Recognition</h3>
          <p class="subsection-description">
            Our complete history of industry awards and achievements.
          </p>
        </div>
        
        <div class="awards-list">
          {awards.filter(award => !award.featured).map((award, index) => (
            <div 
              class={`award-item category-${award.category}`}
              data-animate="fade-up"
              data-delay={1100 + (index * 50)}
              key={award.id}
            >
              <div class="award-item-content">
                <div class="award-item-header">
                  <h4 class="award-item-title">{award.title}</h4>
                  <div class="award-item-meta">
                    <span class="award-item-org">{award.organization}</span>
                    <span class="award-item-year">{award.year}</span>
                    {award.rank && (
                      <span class="award-item-rank">{award.rank}</span>
                    )}
                  </div>
                </div>
                
                {award.description && (
                  <p class="award-item-description">{award.description}</p>
                )}
              </div>
              
              <div class="award-item-icon">
                <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                  <path d="M10 0L12.245 6.91L20 7.639L14.27 13.18L15.89 21L10 17.09L4.11 21L5.73 13.18L0 7.639L7.755 6.91L10 0Z" fill="currentColor"/>
                </svg>
              </div>
            </div>
          ))}
        </div>
      </div>
    )}

    <!-- Call to Action -->
    <div class="certifications-cta" data-animate="fade-up" data-delay="1200">
      <div class="cta-content">
        <h3 class="cta-title">Work with a Certified Team</h3>
        <p class="cta-description">
          Trust your project to industry-certified professionals with proven expertise and recognition.
        </p>
        <div class="cta-actions">
          <a href="/contact" class="cta-primary">
            Start Your Project
            <svg class="cta-arrow" width="20" height="20" viewBox="0 0 20 20" fill="none">
              <path d="M4.16667 10H15.8333M15.8333 10L10.8333 5M15.8333 10L10.8333 15" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </a>
          <a href="/portfolio" class="cta-secondary">
            View Our Work
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Background Decoration -->
  <div class="certifications-decoration" aria-hidden="true">
    <div class="decoration-badges">
      <div class="floating-badge badge-1">‚úì</div>
      <div class="floating-badge badge-2">‚≠ê</div>
      <div class="floating-badge badge-3">üèÜ</div>
      <div class="floating-badge badge-4">üéØ</div>
    </div>
  </div>
</section>

<style define:vars={{
  primaryColor: theme.colors.primary[500],
  primaryHover: theme.colors.primary[600],
  primaryLight: theme.colors.primary[100],
  primaryDark: theme.colors.primary[700],
  secondaryColor: theme.colors.secondary[500],
  successColor: theme.colors.success[500],
  warningColor: theme.colors.warning[500],
  errorColor: theme.colors.error[500],
  neutralWhite: theme.colors.neutral[50],
  neutralGray: theme.colors.neutral[500],
  neutralDark: theme.colors.neutral[900],
  neutralLight: theme.colors.neutral[100],
  borderColor: theme.colors.border,
  fontSans: theme.typography.fontFamily.sans.join(', '),
  fontDisplay: theme.typography.fontFamily.display.join(', '),
  spacing2: theme.spacing[2],
  spacing3: theme.spacing[3],
  spacing4: theme.spacing[4],
  spacing6: theme.spacing[6],
  spacing8: theme.spacing[8],
  spacing12: theme.spacing[12],
  spacing16: theme.spacing[16],
  spacing20: theme.spacing[20],
  spacing24: theme.spacing[24],
  borderRadiusLg: theme.borderRadius.lg,
  borderRadius2xl: theme.borderRadius['2xl'],
  shadowMd: theme.boxShadow.md,
  shadowLg: theme.boxShadow.lg,
  shadow2xl: theme.boxShadow['2xl']
}}>
  .certifications-awards {
    position: relative;
    padding: var(--spacing24) 0;
    background: linear-gradient(135deg, #fafafa 0%, #ffffff 50%, #f8fafc 100%);
    overflow: hidden;
  }

  .certifications-container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 var(--spacing4);
    position: relative;
    z-index: 10;
  }

  @media (min-width: 768px) {
    .certifications-container {
      padding: 0 var(--spacing6);
    }
  }

  /* Section Header */
  .section-header {
    text-align: center;
    margin-bottom: var(--spacing20);
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .section-eyebrow {
    display: inline-block;
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--primaryColor);
    background: var(--primaryLight);
    padding: var(--spacing2) var(--spacing4);
    border-radius: var(--borderRadiusLg);
    margin-bottom: var(--spacing6);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .section-headline {
    font-family: var(--fontDisplay);
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.2;
    color: var(--neutralDark);
    margin: 0 0 var(--spacing6) 0;
  }

  @media (min-width: 768px) {
    .section-headline {
      font-size: 3rem;
    }
  }

  .section-description {
    font-size: 1.125rem;
    line-height: 1.7;
    color: var(--neutralGray);
    margin: 0;
  }

  /* Subsection Headers */
  .subsection-title {
    font-family: var(--fontDisplay);
    font-size: 1.875rem;
    font-weight: 600;
    color: var(--neutralDark);
    margin: 0 0 var(--spacing4) 0;
    text-align: center;
  }

  .subsection-description {
    font-size: 1rem;
    line-height: 1.6;
    color: var(--neutralGray);
    text-align: center;
    max-width: 600px;
    margin: 0 auto var(--spacing12) auto;
  }

  /* Featured Awards Section */
  .featured-awards-section {
    margin-bottom: var(--spacing24);
  }

  .featured-awards-header {
    margin-bottom: var(--spacing16);
  }

  .featured-awards-grid {
    display: grid;
    gap: var(--spacing8);
    grid-template-columns: 1fr;
  }

  @media (min-width: 768px) {
    .featured-awards-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .featured-awards-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .award-card {
    background: var(--neutralWhite);
    border: 1px solid var(--borderColor);
    border-radius: var(--borderRadius2xl);
    padding: var(--spacing8);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .award-card:hover {
    transform: translateY(-4px);
