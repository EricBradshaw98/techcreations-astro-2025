---
// CaseStudies.astro - Case studies and portfolio section
import theme from '../../lib/therme';

export interface Props {
  // Content props
  eyebrow?: string;
  headline?: string;
  description?: string;
  ctaText?: string;
  ctaHref?: string;
  
  // Layout props
  variant?: 'grid' | 'featured' | 'carousel';
  showCta?: boolean;
  maxCases?: number;
  
  // Case studies data
  caseStudies?: Array<{
    id: string;
    title: string;
    client: string;
    industry: string;
    description: string;
    challenge: string;
    solution: string;
    results: Array<{
      metric: string;
      value: string;
      label: string;
    }>;
    image: string;
    imageAlt: string;
    tags: string[];
    href?: string;
    featured?: boolean;
  }>;
}

const {
  eyebrow = "Case Studies",
  headline = "Real Results for Real Businesses",
  description = "See how we've helped businesses like yours achieve exceptional growth through strategic digital solutions. Every project tells a story of transformation and success.",
  ctaText = "View All Case Studies",
  ctaHref = "/portfolio",
  variant = "featured",
  showCta = true,
  maxCases = 4,
  caseStudies = [
    {
      id: "ecommerce-growth",
      title: "E-commerce Revenue Growth",
      client: "TechGear Pro",
      industry: "Technology",
      description: "Complete digital transformation for a tech retailer, resulting in 300% revenue growth and market expansion.",
      challenge: "Legacy website with poor UX, low conversion rates, and limited mobile functionality affecting sales performance.",
      solution: "Built a modern e-commerce platform with advanced search, personalized recommendations, and seamless mobile experience.",
      results: [
        { metric: "300", value: "%", label: "Revenue Increase" },
        { metric: "245", value: "%", label: "Conversion Rate" },
        { metric: "85", value: "%", label: "Mobile Traffic" },
        { metric: "60", value: "%", label: "Customer Retention" }
      ],
      image: "/case-studies/techgear-hero.jpg",
      imageAlt: "TechGear Pro website redesign",
      tags: ["E-commerce", "UX/UI Design", "Mobile Optimization"],
      href: "/portfolio/techgear-pro",
      featured: true
    },
    {
      id: "saas-platform",
      title: "SaaS Platform Launch",
      client: "CloudFlow",
      industry: "Software",
      description: "End-to-end development of a project management SaaS platform that acquired 10K+ users in 6 months.",
      challenge: "Building a scalable SaaS platform from scratch with complex user management and real-time collaboration features.",
      solution: "Developed a cloud-native platform with microservices architecture, real-time updates, and intuitive user interface.",
      results: [
        { metric: "10", value: "K+", label: "Active Users" },
        { metric: "99.9", value: "%", label: "Uptime" },
        { metric: "4.8", value: "/5", label: "User Rating" },
        { metric: "50", value: "%", label: "Feature Adoption" }
      ],
      image: "/case-studies/cloudflow-hero.jpg",
      imageAlt: "CloudFlow SaaS platform dashboard",
      tags: ["SaaS Development", "Cloud Architecture", "Real-time Features"],
      href: "/portfolio/cloudflow",
      featured: false
    },
    {
      id: "healthcare-app",
      title: "Healthcare Mobile App",
      client: "MedConnect",
      industry: "Healthcare",
      description: "HIPAA-compliant mobile app connecting patients with healthcare providers, improving access to care.",
      challenge: "Creating a secure, compliant platform for sensitive medical data while maintaining excellent user experience.",
      solution: "Built native mobile apps with end-to-end encryption, biometric authentication, and seamless appointment booking.",
      results: [
        { metric: "25", value: "K+", label: "App Downloads" },
        { metric: "40", value: "%", label: "Faster Appointments" },
        { metric: "95", value: "%", label: "User Satisfaction" },
        { metric: "100", value: "%", label: "HIPAA Compliance" }
      ],
      image: "/case-studies/medconnect-hero.jpg",
      imageAlt: "MedConnect mobile app interface",
      tags: ["Mobile Development", "Healthcare", "Security"],
      href: "/portfolio/medconnect",
      featured: false
    },
    {
      id: "fintech-platform",
      title: "Fintech Platform Development",
      client: "InvestSmart",
      industry: "Financial Services",
      description: "Revolutionary investment platform with AI-powered insights, serving 50K+ active investors.",
      challenge: "Building a secure, scalable financial platform with real-time market data and AI-driven recommendations.",
      solution: "Developed a comprehensive fintech platform with advanced security, real-time analytics, and machine learning capabilities.",
      results: [
        { metric: "50", value: "K+", label: "Active Investors" },
        { metric: "2.5", value: "B+", label: "Assets Managed" },
        { metric: "99.99", value: "%", label: "Security Score" },
        { metric: "35", value: "%", label: "Better Returns" }
      ],
      image: "/case-studies/investsmart-hero.jpg",
      imageAlt: "InvestSmart platform dashboard",
      tags: ["Fintech", "AI/ML", "Data Analytics"],
      href: "/portfolio/investsmart",
      featured: true
    }
  ]
} = Astro.props;

// Limit and sort case studies
const displayCases = caseStudies
  .slice(0, maxCases)
  .sort((a, b) => (b.featured ? 1 : 0) - (a.featured ? 1 : 0));

const featuredCase = displayCases.find(cs => cs.featured);
const regularCases = displayCases.filter(cs => !cs.featured);
---

<section class="case-studies" aria-labelledby="case-studies-headline">
  <div class="case-studies-container">
    
    <!-- Section Header -->
    <div class="section-header" data-animate="fade-up">
      <span class="section-eyebrow">{eyebrow}</span>
      <h2 id="case-studies-headline" class="section-headline">
        {headline}
      </h2>
      <p class="section-description">
        {description}
      </p>
    </div>

    <!-- Featured Case Study -->
    {variant === 'featured' && featuredCase && (
      <article 
        class="featured-case"
        data-animate="fade-up"
        data-delay="200"
      >
        <div class="featured-content">
          <div class="featured-text">
            <div class="case-meta">
              <span class="client-name">{featuredCase.client}</span>
              <span class="industry-tag">{featuredCase.industry}</span>
              <div class="featured-badge">Featured Project</div>
            </div>
            
            <h3 class="case-title">{featuredCase.title}</h3>
            <p class="case-description">{featuredCase.description}</p>
            
            <!-- Challenge & Solution -->
            <div class="case-details">
              <div class="detail-section">
                <h4 class="detail-title">Challenge</h4>
                <p class="detail-text">{featuredCase.challenge}</p>
              </div>
              
              <div class="detail-section">
                <h4 class="detail-title">Solution</h4>
                <p class="detail-text">{featuredCase.solution}</p>
              </div>
            </div>
            
            <!-- Results -->
            <div class="case-results">
              <h4 class="results-title">Results</h4>
              <div class="results-grid">
                {featuredCase.results.map((result, index) => (
                  <div class="result-item" key={index}>
                    <div class="result-value">
                      <span class="result-number" data-count-to={result.metric}>0</span>
                      <span class="result-suffix">{result.value}</span>
                    </div>
                    <div class="result-label">{result.label}</div>
                  </div>
                ))}
              </div>
            </div>
            
            <!-- Tags -->
            <div class="case-tags">
              {featuredCase.tags.map((tag, index) => (
                <span class="tag" key={index}>{tag}</span>
              ))}
            </div>
            
            <!-- CTA -->
            {featuredCase.href && (
              <a href={featuredCase.href} class="case-cta">
                View Full Case Study
                <svg class="cta-arrow" width="20" height="20" viewBox="0 0 20 20" fill="none">
                  <path d="M4.16667 10H15.8333M15.8333 10L10.8333 5M15.8333 10L10.8333 15" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </a>
            )}
          </div>
          
          <div class="featured-visual">
            <div class="image-container">
              <img 
                src={featuredCase.image}
                alt={featuredCase.imageAlt}
                class="featured-image"
                width="600"
                height="400"
                loading="lazy"
              />
              <div class="image-overlay">
                <div class="overlay-content">
                  <svg class="play-icon" width="48" height="48" viewBox="0 0 48 48" fill="none">
                    <circle cx="24" cy="24" r="24" fill="rgba(255,255,255,0.9)"/>
                    <path d="M20 16L32 24L20 32V16Z" fill="currentColor"/>
                  </svg>
                  <span>View Project</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </article>
    )}

    <!-- Regular Case Studies Grid -->
    {regularCases.length > 0 && (
      <div class="cases-grid" data-animate="fade-up" data-delay="400">
        {regularCases.map((caseStudy, index) => (
          <article 
            class="case-card"
            data-animate="fade-up"
            data-delay={500 + (index * 100)}
            key={caseStudy.id}
          >
            <div class="card-image">
              <img 
                src={caseStudy.image}
                alt={caseStudy.imageAlt}
                width="400"
                height="250"
                loading="lazy"
              />
              <div class="card-overlay">
                <span class="overlay-text">View Case Study</span>
              </div>
            </div>
            
            <div class="card-content">
              <div class="card-meta">
                <span class="client-name">{caseStudy.client}</span>
                <span class="industry-tag">{caseStudy.industry}</span>
              </div>
              
              <h3 class="card-title">{caseStudy.title}</h3>
              <p class="card-description">{caseStudy.description}</p>
              
              <!-- Key Results -->
              <div class="card-results">
                {caseStudy.results.slice(0, 2).map((result, index) => (
                  <div class="card-result" key={index}>
                    <span class="result-number" data-count-to={result.metric}>0</span>
                    <span class="result-suffix">{result.value}</span>
                    <span class="result-label">{result.label}</span>
                  </div>
                ))}
              </div>
              
              <!-- Tags -->
              <div class="card-tags">
                {caseStudy.tags.slice(0, 2).map((tag, index) => (
                  <span class="tag" key={index}>{tag}</span>
                ))}
              </div>
            </div>
            
            {caseStudy.href && (
              <a href={caseStudy.href} class="card-link" aria-label={`View ${caseStudy.title} case study`}>
                <span class="sr-only">View case study</span>
              </a>
            )}
          </article>
        ))}
      </div>
    )}

    <!-- All Cases Grid (for grid variant) -->
    {variant === 'grid' && (
      <div class="all-cases-grid" data-animate="fade-up" data-delay="200">
        {displayCases.map((caseStudy, index) => (
          <article 
            class={`case-card ${caseStudy.featured ? 'featured' : ''}`}
            data-animate="fade-up"
            data-delay={300 + (index * 100)}
            key={caseStudy.id}
          >
            <div class="card-image">
              <img 
                src={caseStudy.image}
                alt={caseStudy.imageAlt}
                width="400"
                height="250"
                loading="lazy"
              />
              <div class="card-overlay">
                <span class="overlay-text">View Case Study</span>
              </div>
              {caseStudy.featured && (
                <div class="featured-badge">Featured</div>
              )}
            </div>
            
            <div class="card-content">
              <div class="card-meta">
                <span class="client-name">{caseStudy.client}</span>
                <span class="industry-tag">{caseStudy.industry}</span>
              </div>
              
              <h3 class="card-title">{caseStudy.title}</h3>
              <p class="card-description">{caseStudy.description}</p>
              
              <div class="card-results">
                {caseStudy.results.slice(0, 3).map((result, index) => (
                  <div class="card-result" key={index}>
                    <span class="result-number" data-count-to={result.metric}>0</span>
                    <span class="result-suffix">{result.value}</span>
                    <span class="result-label">{result.label}</span>
                  </div>
                ))}
              </div>
              
              <div class="card-tags">
                {caseStudy.tags.map((tag, index) => (
                  <span class="tag" key={index}>{tag}</span>
                ))}
              </div>
            </div>
            
            {caseStudy.href && (
              <a href={caseStudy.href} class="card-link" aria-label={`View ${caseStudy.title} case study`}>
                <span class="sr-only">View case study</span>
              </a>
            )}
          </article>
        ))}
      </div>
    )}

    <!-- Section CTA -->
    {showCta && (
      <div 
        class="section-cta"
        data-animate="fade-up"
        data-delay="600"
      >
        <div class="cta-content">
          <h3 class="cta-title">Ready to See Your Success Story?</h3>
          <p class="cta-description">
            Join these successful businesses and transform your digital presence with our proven strategies.
          </p>
          <a href={ctaHref} class="cta-button">
            {ctaText}
            <svg class="cta-arrow" width="20" height="20" viewBox="0 0 20 20" fill="none">
              <path d="M4.16667 10H15.8333M15.8333 10L10.8333 5M15.8333 10L10.8333 15" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </a>
        </div>
      </div>
    )}
  </div>

  <!-- Background Decoration -->
  <div class="background-decoration" aria-hidden="true">
    <div class="decoration-pattern">
      <div class="pattern-dot"></div>
      <div class="pattern-dot"></div>
      <div class="pattern-dot"></div>
      <div class="pattern-dot"></div>
      <div class="pattern-dot"></div>
      <div class="pattern-dot"></div>
      <div class="pattern-dot"></div>
      <div class="pattern-dot"></div>
    </div>
  </div>
</section>

<style define:vars={{
  primaryColor: theme.colors.primary[500],
  primaryHover: theme.colors.primary[600],
  primaryLight: theme.colors.primary[100],
  secondaryColor: theme.colors.secondary[500],
  successColor: theme.colors.success[500],
  neutralWhite: theme.colors.neutral[50],
  neutralGray: theme.colors.neutral[500],
  neutralDark: theme.colors.neutral[900],
  neutralLight: theme.colors.neutral[100],
  borderColor: theme.colors.border,
  fontSans: theme.typography.fontFamily.sans.join(', '),
  fontDisplay: theme.typography.fontFamily.display.join(', '),
  spacing4: theme.spacing[4],
  spacing6: theme.spacing[6],
  spacing8: theme.spacing[8],
  spacing12: theme.spacing[12],
  spacing16: theme.spacing[16],
  spacing20: theme.spacing[20],
  spacing24: theme.spacing[24],
  spacing32: theme.spacing[32],
  borderRadiusLg: theme.borderRadius.lg,
  borderRadius2xl: theme.borderRadius['2xl'],
  shadowMd: theme.boxShadow.md,
  shadowLg: theme.boxShadow.lg,
  shadow2xl: theme.boxShadow['2xl']
}}>
  .case-studies {
    position: relative;
    padding: var(--spacing24) 0;
    background: linear-gradient(180deg, #ffffff 0%, #f8fafc 100%);
    overflow: hidden;
  }

  .case-studies-container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 var(--spacing4);
    position: relative;
    z-index: 10;
  }

  @media (min-width: 768px) {
    .case-studies-container {
      padding: 0 var(--spacing6);
    }
  }

  /* Section Header */
  .section-header {
    text-align: center;
    margin-bottom: var(--spacing20);
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .section-eyebrow {
    display: inline-block;
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--primaryColor);
    background: var(--primaryLight);
    padding: var(--spacing2) var(--spacing4);
    border-radius: var(--borderRadiusLg);
    margin-bottom: var(--spacing6);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .section-headline {
    font-family: var(--fontDisplay);
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.2;
    color: var(--neutralDark);
    margin: 0 0 var(--spacing6) 0;
  }

  @media (min-width: 768px) {
    .section-headline {
      font-size: 3rem;
    }
  }

  .section-description {
    font-size: 1.125rem;
    line-height: 1.7;
    color: var(--neutralGray);
    margin: 0;
  }

  /* Featured Case Study */
  .featured-case {
    background: var(--neutralWhite);
    border-radius: var(--borderRadius2xl);
    box-shadow: var(--shadow2xl);
    border: 1px solid var(--borderColor);
    margin-bottom: var(--spacing20);
    overflow: hidden;
    position: relative;
  }

  .featured-content {
    display: grid;
    gap: var(--spacing8);
    align-items: center;
  }

  @media (min-width: 1024px) {
    .featured-content {
      grid-template-columns: 1fr 1fr;
      gap: var(--spacing16);
    }
  }

  .featured-text {
    padding: var(--spacing8);
    order: 1;
  }

  @media (min-width: 1024px) {
    .featured-text {
      padding: var(--spacing12);
    }
  }

  .featured-visual {
    order: 2;
    position: relative;
  }

  /* Case Meta */
  .case-meta {
    display: flex;
    align-items: center;
    gap: var(--spacing4);
    margin-bottom: var(--spacing6);
    flex-wrap: wrap;
  }

  .client-name {
    font-size: 1rem;
    font-weight: 600;
    color: var(--primaryColor);
  }

  .industry-tag {
    font-size: 0.875rem;
    color: var(--neutralGray);
    background: var(--neutralLight);
    padding: 2px var(--spacing3);
    border-radius: var(--borderRadiusLg);
  }

  .featured-badge {
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--neutralWhite);
    background: var(--primaryColor);
    padding: var(--spacing2) var(--spacing3);
    border-radius: var(--borderRadiusLg);
    margin-left: auto;
  }

  /* Case Content */
  .case-title {
    font-family: var(--fontDisplay);
    font-size: 2rem;
    font-weight: 600;
    color: var(--neutralDark);
    margin: 0 0 var(--spacing4) 0;
    line-height: 1.3;
  }

  .case-description {
    font-size: 1.125rem;
    line-height: 1.7;
    color: var(--neutralGray);
    margin: 0 0 var(--spacing8) 0;
  }

  /* Case Details */
  .case-details {
    display: grid;
    gap: var(--spacing6);
    margin-bottom: var(--spacing8);
  }

  @media (min-width: 640px) {
    .case-details {
      grid-template-columns: 1fr 1fr;
    }
  }

  .detail-section {
    padding: var(--spacing6);
    background: var(--neutralLight);
    border-radius: var(--borderRadiusLg);
    border-left: 4px solid var(--primaryColor);
  }

  .detail-title {
    font-family: var(--fontDisplay);
    font-size: 1rem;
    font-weight: 600;
    color: var(--neutralDark);
    margin: 0 0 var(--spacing3) 0;
  }

  .detail-text {
    font-size: 0.9375rem;
    line-height: 1.6;
    color: var(--neutralGray);
    margin: 0;
  }

  /* Results */
  .case-results {
    margin-bottom: var(--spacing8);
  }

  .results-title {
    font-family: var(--fontDisplay);
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--neutralDark);
    margin: 0 0 var(--spacing4) 0;
  }

  .results-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--spacing4);
  }

  @media (min-width: 640px) {
    .results-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .result-item {
    text-align: center;
    padding: var(--spacing4);
    background: var(--neutralWhite);
    border-radius: var(--borderRadiusLg);
    border: 1px solid var(--borderColor);
  }

  .result-value {
    display: block;
    font-family: var(--fontDisplay);
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--primaryColor);
    line-height: 1;
    margin-bottom: var(--spacing2);
  }

  .result-number {
    color: inherit;
  }

  .result-suffix {
    color: inherit;
  }

  .result-label {
    font-size: 0.875rem;
    color: var(--neutralGray);
    font-weight: 500;
  }

  /* Tags */
  .case-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing2);
    margin-bottom: var(--spacing8);
  }

  .tag {
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--primaryColor);
    background: var(--primaryLight);
    padding: var(--spacing2) var(--spacing3);
    border-radius: var(--borderRadiusLg);
  }

  /* Case CTA */
  .case-cta {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing2);
    font-family: var(--fontSans);
    font-size: 1rem;
    font-weight: 600;
    color: var(--neutralWhite);
    background: var(--primaryColor);
    text-decoration: none;
    padding: var(--spacing3) var(--spacing6);
    border-radius: var(--borderRadiusLg);
    transition: all 0.3s ease;
    box-shadow: var(--shadowMd);
  }

  .case-cta:hover,
  .case-cta:focus {
    background: var(--primaryHover);
    transform: translateY(-2px);
    box-shadow: var(--shadowLg);
  }

  .case-cta:focus {
    outline: 2px solid var(--primaryColor);
    outline-offset: 2px;
  }

  .cta-arrow {
    transition: transform 0.3s ease;
  }

  .case-cta:hover .cta-arrow {
    transform: translateX(4px);
  }

  /* Featured Visual */
  .featured-visual {
    position: relative;
    height: 100%;
    min-height: 400px;
  }

  .image-container {
    position: relative;
    height: 100%;
    overflow: hidden;
    border-radius: 0;
  }

  @media (min-width: 1024px) {
    .image-container {
      border-radius: 0 var(--borderRadius2xl) var(--borderRadius2xl) 0;
    }
  }

  .featured-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .image-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.4);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .featured-case:hover .image-overlay {
    opacity: 1;
  }

  .overlay-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing2);
    color: var(--neutralWhite);
    font-weight: 600;
  }

  .play-icon {
    color: var(--primaryColor);
    transition: transform 0.3s ease;
  }

  .featured-case:hover .play-icon {
    transform: scale(1.1);
  }

  /* Case Cards Grid */
  .cases-grid,
  .all-cases-grid {
    display: grid;
    gap: var(--spacing8);
    grid-template-columns: 1fr;
  }

  @media (min-width: 640px) {
    .cases-grid,
    .all-cases-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .cases-grid {
      grid-template-columns: repeat(3, 1fr);
    }
    
    .all-cases-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  /* Case Cards */
  .case-card {
    position: relative;
    background: var(--neutralWhite);
    border-radius: var(--borderRadius2xl);
    box-shadow: var(--shadowMd);
    border: 1px solid var(--borderColor);
