<script>
  class SimpleFooter {
    constructor() {
      this.newsletterForm = document.querySelector('.newsletter-form');
      this.init();
    }

    init() {
      // Newsletter form handling
      if (this.newsletterForm) {
        this.newsletterForm.addEventListener('submit', (e) => {
          e.preventDefault();
          this.handleNewsletterSubmit(e);
        });
        
        // Enhanced form validation
        const emailInput = this.newsletterForm.querySelector('.newsletter-input');
        if (emailInput) {
          emailInput.addEventListener('invalid', (e) => {
            this.handleFormValidation(e);
          });
          
          emailInput.addEventListener('input', (e) => {
            this.clearValidationMessage(e);
          });
        }
      }
      
      // Enhanced keyboard navigation for social links
      this.setupSocialLinksKeyboard();
      
      // Announce successful interactions to screen readers
      this.setupScreenReaderAnnouncements();
    }

    handleNewsletterSubmit(e) {
      const formData = new FormData(e.target);
      const email = formData.get('email');
      
      if (this.validateEmail(email)) {
        // Here you would typically send the data to your backend
        console.log('Newsletter signup:', email);
        
        // Show success message
        this.showSuccessMessage('Thank you for subscribing to our newsletter!');
        
        // Reset form
        e.target.reset();
      } else {
        this.showErrorMessage('Please enter a valid email address.');
      }
    }

    validateEmail(email) {
      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      return emailRegex.test(email);
    }

    handleFormValidation(e) {
      const input = e.target;
      
      // Custom validation messages
      if (input.validity.valueMissing) {
        input.setCustomValidity('Please enter your email address');
      } else if (input.validity.typeMismatch) {
        input.setCustomValidity('Please enter a valid email address');
      } else {
        input.setCustomValidity('');
      }
      
      this.showInputError(input, input.validationMessage);
    }

    clearValidationMessage(e) {
      const input = e.target;
      input.setCustomValidity('');
      this.clearInputError(input);
    }

    showInputError(input, message) {
      // Remove existing error message
      this.clearInputError(input);
      
      // Create error message element
      const errorElement = document.createElement('div');
      errorElement.className = 'input-error';
      errorElement.textContent = message;
      errorElement.setAttribute('role', 'alert');
      errorElement.setAttribute('aria-live', 'polite');
      
      // Style the error message
      Object.assign(errorElement.style, {
        color: '#ef4444',
        fontSize: '0.75rem',
        marginTop: '0.25rem',
        fontFamily: 'var(--fontSans)'
      });
      
      // Insert after input
      input.parentNode.insertBefore(errorElement, input.nextSibling);
      
      // Update input aria-describedby
      errorElement.id = `${input.id}-error`;
      input.setAttribute('aria-describedby', errorElement.id);
      input.setAttribute('aria-invalid', 'true');
    }

    clearInputError(input) {
      const existingError = input.parentNode.querySelector('.input-error');
      if (existingError) {
        existingError.remove();
        input.removeAttribute('aria-describedby');
        input.removeAttribute('aria-invalid');
      }
    }

    showSuccessMessage(message) {
      this.announceToScreenReader(message);
      
      // You could also show a visual success message here
      const successElement = document.createElement('div');
      successElement.textContent = message;
      successElement.setAttribute('role', 'status');
      successElement.setAttribute('aria-live', 'polite');
      
      Object.assign(successElement.style, {
        color: '#22c55e',
        fontSize: '0.875rem',
        marginTop: '0.5rem',
        fontFamily: 'var(--fontSans)',
        padding: '0.5rem',
        backgroundColor: 'rgba(34, 197, 94, 0.1)',
        borderRadius: '0.375rem',
        border: '1px solid rgba(34, 197, 94, 0.2)'
      });
      
      const form = this.newsletterForm;
      form.appendChild(successElement);
      
      // Remove success message after 5 seconds
      setTimeout(() => {
        if (successElement.parentNode) {
          successElement.remove();
        }
      }, 5000);
    }

    showErrorMessage(message) {
      this.announceToScreenReader(message);
    }

    setupSocialLinksKeyboard() {
      const socialLinks = document.querySelectorAll('.social-link');
      
      socialLinks.forEach(link => {
        link.addEventListener('keydown', (e) => {
          // Add space key support for better accessibility
          if (e.key === ' ') {
            e.preventDefault();
            link.click();
          }
        });
      });
    }

    setupScreenReaderAnnouncements() {
      // Create live region for announcements
      if (!document.getElementById('footer-announcements')) {
        const liveRegion = document.createElement('div');
        liveRegion.id = 'footer-announcements';
        liveRegion.setAttribute('aria-live', 'polite');
        liveRegion.setAttribute('aria-atomic', 'true');
        liveRegion.style.position = 'absolute';
        liveRegion.style.left = '-10000px';
        liveRegion.style.width = '1px';
        liveRegion.style.height = '1px';
        liveRegion.style.overflow = 'hidden';
        document.body.appendChild(liveRegion);
      }
    }

    announceToScreenReader(message) {
      const liveRegion = document.getElementById('footer-announcements');
      if (liveRegion) {
        liveRegion.textContent = message;
        
        // Clear after announcement
        setTimeout(() => {
          liveRegion.textContent = '';
        }, 1000);
      }
    }
  }

  // Initialize when DOM is ready
  document.addEventListener('DOMContentLoaded', () => {
    try {
      new SimpleFooter();
      
      // Mark as successfully loaded for debugging
      document.documentElement.classList.add('footer-js-loaded');
      
    } catch (error) {
      console.error('Error initializing footer:', error);
      
      // Provide basic fallback functionality
      const newsletterForm = document.querySelector('.newsletter-form');
      if (newsletterForm) {
        newsletterForm.addEventListener('submit', (e) => {
          e.preventDefault();
          alert('Thank you for your interest! Please try again later.');
        });
      }
    }
  });

  // Expose utilities for external use
  window.FooterUtils = {
    announceToScreenReader: (message) => {
      const liveRegion = document.getElementById('footer-announcements');
      if (liveRegion) {
        liveRegion.textContent = message;
        setTimeout(() => liveRegion.textContent = '', 1000);
      }
    },
    
    validateEmail: (email) => {
      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      return emailRegex.test(email);
    }
  };